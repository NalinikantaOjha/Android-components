<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masai.androidactivity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidActivity">

        <activity
            android:name=".dynamic_broadcast_receiver.custom_broadcast.ui.ReceiveMessageActivity"
            android:exported="true" />
        <activity
            android:name=".dynamic_broadcast_receiver.custom_broadcast.ui.SendMessageActivity"
            android:exported="true" />
        <activity
            android:name=".dynamic_broadcast_receiver.ui.DynamicActivity"
            android:exported="true" />
        <activity
            android:name=".static_broadcast_receiver.ui.StaticActivity"
            android:exported="true" />
        <activity
            android:name=".dynamic_broadcast_receiver.system_events.ui.ReceiveBroadcastActivity"
            android:exported="true" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- /* this declaration only for static broadcast receiver make sure your devise is less than api level 26 -->
        <!-- or less than oreo operating system*/ -->
        <receiver
            android:name=".static_broadcast_receiver.local.Receiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.CAMERA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>